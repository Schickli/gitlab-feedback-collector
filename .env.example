# GitLab instance base URL (no trailing slash), e.g. https://gitlab.example.com
GITLAB_BASE_URL=
# Personal access token with api scope
GITLAB_TOKEN=
# Webhook secret token for validating X-Gitlab-Token
GITLAB_WEBHOOK_SECRET=
# Optional: comma-separated or JSON array of categories
FEEDBACK_CATEGORIES=Clarity,Timeliness,CI_Quality,Review_Helpfulness
# Optional bot username for idempotency checks
BOT_USERNAME=
# Whether to post an acknowledgement reply on successful parse (true/false)
CREATE_ACK_REPLY=true
# Optional: Allowed projects list (comma-separated project IDs)
ALLOWED_PROJECTS=
# Optional: Database path
DB_PATH=./data/app.db
# Server port
PORT=3000
# Why feedback request (link to docs page)
WHY_FEEDBACK_REQUEST="https://example.com"